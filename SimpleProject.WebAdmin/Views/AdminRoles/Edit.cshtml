@model AdminRoleDto
@{
    var leftMenu = LeftMenu.Default;
    var customMenu = Model?.Settings;
    ViewBag.Title = "Rol düzenleme";
    ViewBag.Detail = true;
    var modal = ViewBag.Modal != null && ViewBag.Modal;
}
@if (Model == null)
{
    <div class="card">
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                @(this.GetErrorMessage())
            </div>
        </div>
    </div>
    return;
}

@if (!modal)
{
    @section page_header 
    {
        <div class="btn-list">
            <button type="button" class="btn btn-dark" onclick="history.back()">
                <i class="ri-arrow-go-back-line me-1"></i> Geri
            </button>
            <button type="button" class="btn btn-primary" onclick="saveAdminRole()">
                <i class="ri-save-line me-1"></i> Kaydet
            </button>
        </div>
    }
}

<style>
    .icon-select {
        border: 2px solid #dedede;
        border-radius: 5px;
        padding: 3px;
    }

    .selected-icon {
        border: 2px solid #007bff;
        border-radius: 5px;
        padding: 3px;
    }

    #icon-list i {
        cursor: pointer;
        padding: 5px;
    }

    .widget {
        border: 1px solid #f2f4f6
    }

        .widget:hover {
            cursor: move
        }

    .invisible {
        visibility: hidden;
    }

    .widget:hover .invisible {
        visibility: visible !important
    }

    .clickable {
        cursor: pointer;
    }

    .header-item {
        position: relative;
    }

        .header-item::before {
            content: "- header";
            font-size: 0.7rem;
            color: gray;
            position: absolute;
            top: 50%;
            left: 24%;
            transform: translate(-50%, -45%);
        }
</style>

<div class="card custom-card @(modal ? "shadow-none": "container")">
    @if (modal)
    {
        <div class="card-header">
            <div class="card-title">@(ViewBag.Title)</div>
        </div>
    }
    <div class="card-body">
        <form id="frmAdminRole" action="/adminroles/save" method="post" onsubmit="saveAdminRole(); return false;">
            <div class="row mb-3">
                <label class="col-md-2 offset-lg-1 col-form-label text-md-end" asp-for="Name"></label>
                <div class="col-md-10 col-lg-8">
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-2 offset-lg-1 col-form-label text-md-end" asp-for="Code"></label>
                <div class="col-md-10 col-lg-8">
                    <input type="text" class="form-control" asp-for="Code" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-2 offset-lg-1 col-form-label text-md-end" asp-for="Status"></label>
                <div class="col-md-10 col-lg-8">
                    <dropdown asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()"></dropdown>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-2 offset-lg-1 col-form-label text-md-end"></label>
                <div class="col-md-10 col-lg-8">
                    <checkbox asp-for="Settings!.UseDefaultMenu" onchange="checkForDefaultSettings()" label="Varsayılan menu" />
                </div>
            </div>
            <div class="row gy-3 d-none" id="customSettings">
                <div class="list-group col-md-6">
                    <div class="text-center p-2 fw-bold">Available menu items</div>
                    <div id="defaultMenuItems" class="border rounded p-2" style="min-height:10rem;"></div>
                </div>
                <div class="list-group col-md-6">
                    <div class="text-center p-2 fw-bold">Left menu</div>
                    <div id="customMenuItems" class="border rounded p-2" style="min-height:10rem;"></div>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary mt-2" onclick="showCreateNewItemModel()">
                            Yeni Menü Elemanı Ekle
                        </button>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SettingsRaw">
        </form>
    </div>
</div>

<script src="/assets/libs/sortable/sortable.min.js"></script>
<script>
    const leftMenu = @Html.Raw(Json.Serialize(leftMenu));
    const customMenu = @Html.Raw(Json.Serialize(customMenu)) || '';
    const marginLeftValueConstant = 1.5;
    const marginLeftUnitConstant = "rem";

    let filteredLeftMenu = [...leftMenu];

    if (customMenu.menus) {
        filteredLeftMenu = leftMenu.filter(leftMenuItem =>
            !customMenu.menus.some(customMenuItem => customMenuItem.name === leftMenuItem.name)
        );
    }
</script>

@if (modal)
{
    <script src="/assets/js/pages/adminrole/edit.js" asp-append-version="true"></script>
}
else
{
    @section scripts 
    {
        <script src="/assets/js/pages/adminrole/edit.js" asp-append-version="true"></script>
    }
}